echo  "" > /tmp/haron/TS
sleep 5 &&
while true; do
    if [[ -n $(pgrep transmission) ]]; then 
        echo  "<fc=#0e0></fc>" > /tmp/haron/TS
        sleep 30
    else
        echo  "<fc=#e50></fc>" > /tmp/haron/TS
        sleep 5
    fi
done
