# STATUS=`ping -c 3 8.8.8.8 | tail -2 | head -1 | awk '{print $4}'`
# while [[ $STATUS -eq 0 ]]; do
#     echo "<fc=#e50> Server is not available</fc>" > /tmp/haron/UP
#     sleep 30 &&
# done
UPD=`checkupdates | wc -l`
if [[ $UPD -gt 0 ]]; then 
    if [[ $UPD -eq 1 ]]; then
        PKG='package'
    elif [[ $UPD -gt 1 ]]; then
        PKG='packages'
    fi
    echo "<action=XMYaourt><fc=#fb0> $UPD $PKG can be updated</fc></action>" > /tmp/haron/UP
else 
    echo > /tmp/haron/UP
    notify-send -u critical -i "/home/haron/.icons/nouveGnomeGray/24x24/status/pk-update-security.png" "    <big><b><u>YAOURT</u></b></big>" "Nothing to update" 
fi
exit 0
