# STATUS=`ping -c 3 8.8.8.8 | tail -2 | head -1 | awk '{print $4}'`
# while [[ $STATUS -eq 0 ]]; do
#     echo "<fc=#e50> Server is not available</fc>" > /tmp/haron/UP
#     sleep 30 &&
# done
UPD=`checkupdates | wc -l`
if [[ $UPD -gt 0 ]]; then 
    if [[ $UPD -eq 1 ]]; then
        PKG='package'
    elif [[ $UPD -gt 1 ]]; then
        PKG='packages'
    fi
    echo "<action=XMAurman><fc=#fb0> $UPD $PKG can be updated</fc></action>" > /tmp/haron/UP
else 
    echo "<action=XMUpdate2><fc=#0e0></fc></action>" > /tmp/haron/UP
fi
exit 0
