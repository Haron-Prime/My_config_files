urxvtc -name update -e yay -Syu &&
while [[ -n $(pgrep yay) ]]; do 
    sleep 1
done
XMMWC &
XMUpdate3 &&
if [[ $(checkupdates | wc -l) -eq 0 ]]; then
    notify-send -u critical -i "/home/haron/.icons/nouveGnomeGray/24x24/status/pk-update-security.png" "     <big><b><u>YAY</u></b></big>" " Update complete"
else
    notify-send -u critical -i "/home/haron/.icons/nouveGnomeGray/24x24/status/pk-update-security.png" "        <big><b><u>YAY</u></b></big>" " Update do not complete"
fi
exit 0
