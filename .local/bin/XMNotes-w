#!/usr/bin/env zsh
# Author - Haron Prime
# License - Â© 2017 WTFPL - http://www.wtfpl.net/

D1=$HOME/MyNotes/$(date '+%Y')
D2=$D1/$(date '+%m')
D3=$D2/$(date '+%d')
F1=$D3/$(date '+%H:%M:%S')

if [[ ! -d $D1 ]] ; then 
    mkdir $D1;
else
    if [[ ! -d $D2 ]] ; then 
        mkdir $D2
    else
        if [[ ! -d $D3 ]] ; then 
            mkdir $D3
        fi
    fi
fi
xclip -o >> $F1
exit 0
